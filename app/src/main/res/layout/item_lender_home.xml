<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/card_background">

    <TextView
        android:id="@+id/borrowerNameLenderHomeTextView"
        android:layout_width="83dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="68dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/paymentImageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amountLenderHomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="41dp"
        android:autoSizeTextType="uniform"
        android:text="@string/subtitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionLenderHomeTextView"
        app:layout_constraintStart_toStartOf="@+id/borrowerNameLenderHomeTextView"
        app:layout_constraintTop_toBottomOf="@+id/borrowerNameLenderHomeTextView" />

    <TextView
        android:id="@+id/descriptionLenderHomeTextView"
        android:layout_width="310dp"
        android:layout_height="109dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/card_background_white"
        android:padding="15dp"
        android:singleLine="false"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profilePictureLenderHomeImageView"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/descriptionLenderHomeTextView"
        app:layout_constraintEnd_toStartOf="@+id/borrowerNameLenderHomeTextView"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_background_teal" />

    <ImageButton
        android:id="@+id/paymentImageButton"
        android:layout_width="48dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/card_background_white"
        app:layout_constraintBottom_toTopOf="@+id/descriptionLenderHomeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_baseline_add_card_24" />

</androidx.constraintlayout.widget.ConstraintLayout>