<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleChangeDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="Change data"
        android:textAlignment="center"
        android:textColor="@color/secondaryDark"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nameChangeDataEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/card_background"
        android:hint="@string/your_name"
        android:paddingHorizontal="20dp"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/surnamesChangeDataEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleChangeDataTextView" />

    <EditText
        android:id="@+id/birthdayChangeDataEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/card_background"
        android:ems="10"
        android:hint="@string/birthday"
        android:importantForAutofill="no"
        android:inputType="date"
        android:paddingHorizontal="20dp"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/phoneNumberChangeDataEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/surnamesChangeDataEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:autofillHints=""
        android:background="@drawable/card_background"
        android:ems="10"
        android:hint="@string/surnames"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/birthdayChangeDataEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/phoneNumberChangeDataEditText"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/card_background"
        android:ems="10"
        android:hint="@string/phone_number"
        android:importantForAutofill=""
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        android:textColor="@color/secondary"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/card_background"
        android:ems="10"
        android:hint="IBAN"
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        android:textColor="@color/secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="557dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/card_background"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="156dp"
        android:text="Save changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />


</androidx.constraintlayout.widget.ConstraintLayout>